<article class="row simple-article">
    <div class="col s12">
        <div class="card hoverable">
            <div class="card-content">
                <div class="article-title">
                    <h1><%= item.title %></h1>
                </div>
                <%- partial('post/time') %>
                <%- partial('post/tag') %>
                
                <% if (showEntry && item.excerpt && index) { %>
                    <div class="entry">
                        <%- item.excerpt %>
                    </div>
                <% } %>
            </div>
            
            <% if (item.excerpt) { %>
            <div class="card-action">
                <a href="<%= item.path %>" class="teal-text">READ MORE</a>
            </div>
            <% } %>
        </div>
    </div>
</article>
