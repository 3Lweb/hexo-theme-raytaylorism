<article class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <div class="article-title">
                    <%- partial('post/title') %>
                </div>
                <%- partial('post/time') %>
                <%- partial('post/tag') %>
                <div class="toc-wrap">
                    <div class="toc-title">目录</div>
                    <%- toc(item.content) %>
                </div>

                <div class="entry">
                    <%- item.content %>
                </div>
            </div>
        </div>
    </div>
</article>

<% if (!extra) { %>
    <%- partial('plugin/comment') %>
<% } %>
