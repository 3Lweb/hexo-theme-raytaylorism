                indicators: false,
                full_width: true
            });
            
            $(".button-collapse").sideNav();
            $(".category-menu").sideNav();
            
            // 文章目录
            $('article').not('.simple-article').find('h1').add('h2').add('h3').scrollSpy();
        });
