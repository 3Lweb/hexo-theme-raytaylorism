#footer
    padding header-footer-height-padding page-padding
    background-color color-footer-background
    color color-font
    overflow hidden

.footer-text
    float left
    padding-left 30px

.footer-text a
    color #66d9ef
    font-style italic

.footer-text a:hover
    color #16a085

.social-group
    float right
    width 5em
    font-size: 2.5em;

.social-group a
    color color-font
    padding 0 4px

.social-group a:hover
    color #2ea5cd

@media screen and (max-width: 740px)
  body
    padding 0
  
  .wrapper
    border-radius 0
    box-shadow none
    width 100%
  
  #footer
    border-radius 0
    margin 0 auto
    padding 10px
    width auto
    text-align left

@media screen and (max-width:580px)
  #header
    padding 15px 20px
    .title
      float none

    .nav
      ul
        li
          margin-left 10px
  
    p
      width 100%

  .archive-title
    padding 0 20px

  article
    padding 15px 20px

    .gallery
      margin 0 -20px 16px

    .entry
      blockquote
        margin 0 -20px 20px